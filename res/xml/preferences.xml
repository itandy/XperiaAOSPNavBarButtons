<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="pref_show_recent"
        android:summary="Show recent apps button"
        android:title="Show Recent" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="pref_show_menu"
        android:summary="Show menu button"
        android:title="Show Menu" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="pref_show_search"
        android:summary="Show search button"
        android:title="Show Search" />

    <Preference
        android:key="pref_reorder"
        android:summary="Re-order buttons in NavBar"
        android:title="Re-order buttons" />
    <Preference
        android:key="pref_theme"
        android:summary="Select theme for NavBar buttons"
        android:title="Select theme" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="pref_use_alt_menu"
        android:summary="Only available when theme is selected"
        android:title="Use alternate menu button" />

    <Preference
        android:key="pref_restart_systemui"
        android:summary="Restart SysmteUI process to apply changes immediately.\n\nIf notification bar or NavBar are not displaying correctly or any icons are missing, please reboot your device."
        android:title="Restart SystemUI (Root required)" />

    <Preference
        android:key="pref_hints"
        android:summary="How to use user define button images"
        android:title="Hints" />

</PreferenceScreen>